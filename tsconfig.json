{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "tsDist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "strict": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "tsDist",
    "dist",
    "test",
    "dest"
  ],
}
